@model ClinicDomain.Models.Procedure

@{
    ViewData["Title"] = "Edit";
}

<div style="margin-top:20px; display: flex; align-items: center; ">
    <a asp-area="" asp-controller="Procedures" asp-action="Index" asp-route-id="@Model.Id" class="image-button" style="position: absolute; left: 80px ; top: 14%; transform: translateY(-50%); z-index:4;"></a>
    <h2>Редагування</h2>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" style="margin-bottom:20px;">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ClinicId" type="hidden" class="form-control" value="@ViewBag.CurrentClinicId" readonly />
            </div>
            <div class="form-group" style="margin-top: 40px;">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
