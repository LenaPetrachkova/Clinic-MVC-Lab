@model ClinicInfrastructure.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
}


<h2 style="text-align: center; margin-top:60px;">Вхід</h2>

<div class="row" style="justify-content:center;">
    <div class="col-md-4">
        <form method="post" asp-controller="Account" id="registerForm" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-top:20px;">
                <label  class="control-label" style="font-size: 20px;">Ім'я користувача</label>
                <input asp-for="Username" class="form-control" style="height:45px;" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top:20px;">
                <label asp-for="Password" class="control-label" style="font-size: 20px;"></label>
                <input asp-for="Password" class="form-control" style="height:45px;" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:20px;">
                <label asp-for="RememberMe" class="control-label" style="font-size: 15px;"></label> <br />
                <input asp-for="RememberMe"/>
            </div>
            <div class="form-group" style="margin-top:15px; text-align: center;">
                <input type="submit" value="Увійти" class="btn btn-primary btn-lg" />
            </div>
        </form>
        <div class="text-center" style="font-size: 20px; margin-top: 20px;">
            Не маєте акаунту?
            <a asp-area="" asp-controller="Clinics" asp-action="Create" style="font-size:20px;">Зареєструватися</a>
        </div>
    </div>
</div>
<script>
    function replaceSpaces() {
        var usernameInput = document.getElementById("Username");
        usernameInput.value = usernameInput.value.replace(/\s+/g, "_");
    }
    document.getElementById("registerForm").addEventListener("submit", replaceSpaces);
</script>

