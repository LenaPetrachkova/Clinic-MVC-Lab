
@{
    ViewData["Title"] = "RegisterDoctor";
    int clinicId = Convert.ToInt32(ViewBag.ClinicId);
}
@model ClinicInfrastructure.ViewModel.RegisterViewModel


<h3 style="text-align: center; margin-top:60px;">Реєстрація лікаря</h3>

<div class="row" style="justify-content:center;">
    <div class="col-md-4">
        <form method="post" asp-controller="Account" asp-action="RegisterDoctor" asp-route-clinicId="@ViewBag.ClinicId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-top:20px;">
                <label asp-for="Username" class="control-label" style="font-size: 20px;"></label>
                <input asp-for="Username" class="form-control" style="height:45px;" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:20px;">
                <label asp-for="Email" class="control-label" style="font-size: 20px;"></label>
                <input asp-for="Email" class="form-control" style="height:45px;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top:20px;">
                <label asp-for="Password" class="control-label" style="font-size: 20px;"></label>
                <input asp-for="Password" class="form-control" style="height:45px;" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:20px;">
                <label asp-for="ConfirmPassword" class="control-label" style="font-size: 20px;"></label> <br />
                <input asp-for="ConfirmPassword" class="form-control" style="height:45px;" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ClinicId" value="@ViewBag.ClinicId" />
            <div class="form-group" style="margin-top:30px; text-align: center;">
                <input type="submit" value="Зареєструвати" class="btn btn-primary btn-lg" />
            </div>
        </form>
        <div class="text-center">
            <a asp-area="" asp-controller="Profile" asp-action="Index" class="btn btn-link" style="font-size:20px; margin-top: 20px;">Назад</a>
        </div>

    </div>
</div>

